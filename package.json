{
  "name": "ban-platform",
  "private": true,
  "version": "2.0.0-alpha.1",
  "type": "module",
  "engines": {
    "node": ">=24.0.0",
    "npm": "please-use-pnpm",
    "pnpm": ">= 10.12.0",
    "yarn": "please-use-pnpm"
  },
  "packageManager": "pnpm@10.12.4",
  "scripts": {
    "ban:start": "./scripts/ban-start.sh",
    "ban:stop": "./scripts/ban-stop.sh",
    "dev:infra:up": "./scripts/dev-infra-up.sh",
    "dev:infra:down": "./scripts/dev-infra-down.sh",
    "dev:start": "./scripts/dev-start.sh",
    "dev:stop": "./scripts/dev-stop.sh",
    "dev:all": "pnpm --recursive --parallel run dev || true",
    "dev": "pnpm dev:start || true",
    "build": "pnpm --recursive run build",
    "lint": "eslint . --ext .ts",
    "test": "vitest",
    "test:bal-parser": "vitest --project bal-parser",
    "test:ban-core-api": "vitest --project ban-core-api",
    "test:ban-core-writer": "vitest --project ban-core-writer",
    "test:beautifier": "vitest --project beautifier",
    "test:merger": "vitest --project merger",
    "test:orchestrator": "vitest --project orchestrator",
    "test:target-key": "vitest --project target-key"
  },
  "devDependencies": {
    "@types/node": "^24.1.0",
    "@types/rascal": "^10.2.1",
    "@typescript-eslint/eslint-plugin": "^8.35.0",
    "@typescript-eslint/parser": "^8.35.0",
    "eslint": "^9.29.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-stylistic": "0.0.0-0",
    "tsconfig-paths": "^4.2.0",
    "tsup": "^8.5.0",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "dotenv": "^17.2.1",
    "rascal": "^20.1.1",
    "zod": "^3.25.76"
  }
}